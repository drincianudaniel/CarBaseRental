@model CarBase.Models.vehicle

@{
    ViewData["Title"] = "CarsDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<link rel="stylesheet" href="~/css/CarManage.css">
<div class="banner">
    
    <div class="content">
        <h1>CarsDetails</h1>
        <div>
            <h4>vehicle</h4>
            <hr />
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Model):
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Model)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.year):
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.year)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.horsepower):
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.horsepower)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.rent_status):
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.rent_status)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.img_url):
                </dt>
                <dd class = "col-sm-10">
                    <img src="@Html.DisplayFor(model => model.img_url)" alt="">
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.make):
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.make.name)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.type):
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.type.name)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.engine):
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.engine.size)  @Html.DisplayFor(model => model.engine.type)
                </dd>
            </dl>
        </div>
        <div>
            <a class="back" asp-action="CarEdit" asp-route-id="@Model?.vehicleID">Edit</a> |
            <a class="back" asp-action="Cars">Back to List</a>
        </div>
    </div>
</div>
