@model CarBase.Models.vehicle


@section Scripts {
    <script type="text/javascript">
        function populateEngines() {
            $.ajax({
                url: "/Cars/PopulateEngines",
                type: "GET",
                success: function (response) { 
                    response["$values"].forEach(function (element) {
                        console.log(element.type + " " + element.size)
                        $("#locationsSelect").append("<option>" + element.type + " " + element.size + "</option>");
                    });
                },
                error: function () {
                    $("#locationsSelect").empty();
                }
            });
        }

          function populateMakes() {
            $.ajax({
                url: "/Cars/PopulateMakes",
                type: "GET",
                success: function (response) {
                    response["$values"].forEach(function (element) {
                        $("#makeSelect").append("<option>" + element.name + "</option>");
                    });
                },
                error: function () {
                    $("#makeSelect").empty();
                }
            });
        }

          function PopulateTypes() {
            $.ajax({
                url: "/Cars/PopulateTypes",
                type: "GET",
                success: function (response) { 
                    response["$values"].forEach(function (element) {
                        $("#typeSelect").append("<option>" + element.name  + "</option>");
                    });
                },
                error: function () {
                    $("#typeSelect").empty();
                }
            });
        }
@* 
        $("#locationTypeSelect").on('change', populateEngines);
        $("#makesTypeSelect").on('change', populateMakes); *@
        populateEngines();
        populateMakes();
        PopulateTypes();
    </script>
}

