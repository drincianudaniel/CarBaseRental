@model CarBase.Models.engine

@{
    ViewData["Title"] = "insertEngine";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link rel="stylesheet" href="~/css/CarManage.css">

<div class="banner">
    <div class="content">
        <h1>Insert Engine</h1>

        <h4>engine</h4>
        <hr />
