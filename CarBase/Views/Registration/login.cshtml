@{
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="~/css/header.css" asp-append-version="true" />

    <title>LogIn</title>
</head>
<body>

     <header>
        <a class="logo" asp-controller="Home" asp-action="Index"><image src="../resources/images/carbasewhite.png"></image></a>
        <ul class = "header-menu">
            <li><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a asp-controller="Cars" asp-action="Cars">Cars</a></li>
            <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
            <li><a asp-controller="Home" asp-action="desktopapp">Desktop Application</a></li>
        </ul>
        <ul class = "header-login">
            <li><a a asp-controller="Registration" asp-action="login">Login</a></li>
        </ul>
    </header>

    <div class="banner">
        <div class="login-content">
                <div class="box">
                    <form class="login-form">
                        <span class="text-center">login</span>
                    <div class="input-container">
                        <input type="text" required=""/>
                        <label>Username</label>		
                    </div>
                    <div class="input-container">		
                        <input type="password" required=""/>
                        <label>Password</label>
                    </div>
                        <button type="button" class="btn">Log In</button>
                </form>	
               </div>
            </div>
            <div class="signup-content">
                <div class="signup-objects">
                    <p>Want to rent a car?</p>
                    <p>Create an account and start renting now<p>
                    <a asp-controller="Registration" asp-action="register"><button class="btnSignUp"><span>Create account</span></button></a>
                </div>
        </div>
    </div>
</body>
</html>